{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "outDir": "lib",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
