{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "jsx": "react"
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "lib", "bin"]
}
